@model EpiServerBlogs.Web.ViewModels.Checkout.CheckoutAddressesViewModel

<div class="row">
    <div class="col-xs-12 col-sm-6">
        <h4>Billing Address</h4>
        @if (Model.SelectedBillingAddress != null)
        {
            <div class="row">
                <div class="col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <span>Selected billing address</span>
                        </div>
                        <div class="panel-body">
                            <strong>@Model.SelectedBillingAddress.Name</strong><br/>
                            <span>@Model.SelectedBillingAddress.ContactInfo</span><br/>
                            <span>@Model.SelectedBillingAddress.AddressInfo</span><br/>
                        </div>
                    </div>
                </div>
            </div>

            if (Model.BillingAddresses.Any(a => !a.AddressId.Equals(Model.SelectedBillingAddress.AddressId)))
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h5 class="panel-title">
                            <a data-toggle="collapse" href="#other-billing-addresses">Other Billing Addresses</a>
                        </h5>
                    </div>
                    <div id="other-billing-addresses" class="panel-collapse collapse">
                        <div class="panel-body">
                            @foreach (var address in Model.BillingAddresses.Where(a => !a.AddressId.Equals(Model.SelectedBillingAddress.AddressId)))
                            {
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="panel highlight">
                                            <strong>@address.Name</strong><br/>
                                            <span>@address.ContactInfo</span><br/>
                                            <span>@address.AddressInfo</span><br/>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            foreach (var address in Model.BillingAddresses)
            {
                <div class="row">
                    <div class="col-xs-12">
                        <div class="panel highlight">
                            <strong>@address.Name</strong><br/>
                            <span>@address.ContactInfo</span><br/>
                            <span>@address.AddressInfo</span><br/>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <div class="col-xs-12 col-sm-6">
        <h4>Shipping Address</h4>
        @if (Model.SelectedShippingAddress != null)
        {
            <div class="row">
                <div class="col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <span>Selected shipping address</span>
                        </div>
                        <div class="panel-body">
                            <strong>@Model.SelectedShippingAddress.Name</strong><br />
                            <span>@Model.SelectedShippingAddress.ContactInfo</span><br />
                            <span>@Model.SelectedShippingAddress.AddressInfo</span><br />
                        </div>
                    </div>
                </div>
            </div>

            if (Model.ShippingAddresses.Any(a => !a.AddressId.Equals(Model.SelectedShippingAddress.AddressId)))
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h5 class="panel-title">
                            <a data-toggle="collapse" href="#other-shipping-addresses">Other Shipping Addresses</a>
                        </h5>
                    </div>
                    <div id="other-shipping-addresses" class="panel-collapse collapse">
                        <div class="panel-body">
                            @foreach (var address in Model.ShippingAddresses.Where(a => !a.AddressId.Equals(Model.SelectedShippingAddress.AddressId)))
                            {
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="panel highlight">
                                            <strong>@address.Name</strong><br />
                                            <span>@address.ContactInfo</span><br />
                                            <span>@address.AddressInfo</span><br />
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            foreach (var address in Model.ShippingAddresses)
            {
                <div class="row">
                    <div class="col-xs-12">
                        <div class="panel highlight">
                            <strong>@address.Name</strong><br />
                            <span>@address.ContactInfo</span><br />
                            <span>@address.AddressInfo</span><br />
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>