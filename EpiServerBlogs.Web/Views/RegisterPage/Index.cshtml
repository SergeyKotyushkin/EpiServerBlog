@model EpiServerBlogs.Web.ViewModels.RegisterPageViewModel

<h1>Registration</h1>

@using (Html.BeginForm(null, null, new {Action = "Register"}, FormMethod.Post))
{
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <div class="form-group">
                <label>
                    <span>Email</span>
                    @Html.TextBoxFor(m => m.RegisterPagePostViewModel.Email, new { @class = "form-control", Name = "Email" })
                </label>
            </div>
            <div class="form-group">
                <label>
                    <span>UserName</span>
                    @Html.TextBoxFor(m => m.RegisterPagePostViewModel.UserName, new { @class = "form-control", Name = "UserName" })
                </label>
            </div>
            <div class="form-group">
                <label>
                    <span>Password</span>
                    @Html.PasswordFor(m => m.RegisterPagePostViewModel.Password, new { @class = "form-control", Name = "Password" })
                </label>
            </div>
            <div class="form-group">
                <label>
                    <span>Repeat Password</span>
                    @Html.PasswordFor(m => m.RegisterPagePostViewModel.RepeatPassword, new { @class = "form-control", Name = "RepeatPassword" })
                </label>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </div>
        @if (Model.ShowErrorMessage)
        {
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                <div class="alert alert-danger">
                    <span>@Model.ErrorMessage</span>
                </div>
            </div>
        }
    </div>
}

